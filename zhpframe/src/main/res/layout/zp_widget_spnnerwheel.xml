<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@color/dialog_bg"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/title_bg"
            >
            <TextView
                android:id="@+id/spnner_wheel_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="ceshi-测试"
                android:textSize="@dimen/t_18"
                android:gravity="center"
                android:textColor="@color/title_txt"
                />
            <Button
                android:id="@+id/spnner_wheel_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="@string/btn_save"
                android:textColor="@color/popup_save_txt"
                android:textSize="@dimen/t_18"
                android:background="@android:color/transparent"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.zhp.sdk.spinnerwheel.WheelVerticalView
                android:id="@+id/spnner_wheel_index_whv"
                android:layout_width="20dp"
                app:visibleItems="5"
                app:selectionDivider="@drawable/x_item_divider_h"
                app:selectionDividerHeight="1px"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.zhp.sdk.spinnerwheel.WheelVerticalView
                    android:id="@+id/spnner_wheel_option_whv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:minWidth="90dp"
                    app:visibleItems="5"
                    app:selectionDivider="@drawable/x_item_divider_h"
                    app:selectionDividerHeight="1px"
                     />

                <com.zhp.sdk.spinnerwheel.WheelVerticalView
                    android:id="@+id/spnner_wheel_option_whv2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:minWidth="90dp"
                    app:visibleItems="5"
                    app:selectionDivider="@drawable/x_item_divider_h"
                    app:selectionDividerHeight="1px"/>

                <com.zhp.sdk.spinnerwheel.WheelVerticalView
                    android:id="@+id/spnner_wheel_option_whv3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:minWidth="90dp"
                    app:visibleItems="5"
                    app:selectionDivider="@drawable/x_item_divider_h"
                    app:selectionDividerHeight="1px"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
