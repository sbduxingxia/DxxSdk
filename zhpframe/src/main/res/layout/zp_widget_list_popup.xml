<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@color/dialog_bg"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/title_bg"
            >
            <TextView
                android:id="@+id/list_pop_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="ceshi-测试"
                android:textSize="@dimen/t_18"
                android:gravity="center"
                android:textColor="@color/title_txt"
                />
            <Button
                android:id="@+id/list_pop_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="@string/btn_save"
                android:textColor="@color/popup_save_txt"
                android:textSize="@dimen/t_18"
                android:background="@android:color/transparent"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/list_pop_content_lnly"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="horizontal"
            android:padding="0dp">
            <ListView
                android:id="@+id/list_pop_listv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
