<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="ifContentScrolls">
        <LinearLayout
            android:id="@+id/ll_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/update_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Dialog"/>
            <Button
                android:id="@+id/loading_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Dialog"/>
            <Button
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tip normal"/>
            <Button
                android:id="@+id/tip_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tip center"/>
            <Button
                android:id="@+id/pull_to_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pull To Refresh"/>

            <Button
                android:id="@+id/tab_viewpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tab ViewPage"/>
            <Button
                android:id="@+id/spnner_wheel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spnner Wheel"/>
            <Button
                android:id="@+id/list_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ListView Popup"/>
            <Button
                android:id="@+id/audio_steal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通话录音"/>
            <Button
                android:id="@+id/open_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="web控件"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
